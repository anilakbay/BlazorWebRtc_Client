@page "/home"
@inject HttpClient Http

<PageTitle>Discover - Friendship App</PageTitle>

<style>
    .discover-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 3rem 2rem;
        text-align: center;
        color: white;
    }

    .discover-header h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .discover-header p {
        font-size: 1.2rem;
        opacity: 0.9;
    }

    .search-section {
        padding: 2rem;
        background: #f8f9fa;
    }

    .search-container {
        max-width: 600px;
        margin: 0 auto;
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .search-input {
        flex: 1;
        padding: 1rem;
        border: 2px solid #e9ecef;
        border-radius: 25px;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s ease;
    }

    .search-input:focus {
        border-color: #667eea;
    }

    .search-button {
        background: linear-gradient(45deg, #667eea, #764ba2);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 25px;
        cursor: pointer;
        font-weight: 600;
        transition: transform 0.3s ease;
    }

    .search-button:hover {
        transform: scale(1.05);
    }

    .filters {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
        margin-bottom: 2rem;
    }

    .filter-button {
        background: white;
        border: 2px solid #e9ecef;
        padding: 0.5rem 1.5rem;
        border-radius: 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .filter-button:hover,
    .filter-button.active {
        background: #667eea;
        color: white;
        border-color: #667eea;
    }

    .users-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .user-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
    }

    .user-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }

    .user-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin: 0 auto 1.5rem;
        background: linear-gradient(45deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: white;
        font-weight: bold;
    }

    .user-card h3 {
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .user-location {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .user-interests {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .interest-tag {
        background: #e9ecef;
        color: #495057;
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .user-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .action-button {
        padding: 0.8rem 1.5rem;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .connect-button {
        background: linear-gradient(45deg, #28a745, #20c997);
        color: white;
    }

    .connect-button:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .message-button {
        background: #f8f9fa;
        color: #495057;
        border: 2px solid #e9ecef;
    }

    .message-button:hover {
        background: #e9ecef;
        transform: scale(1.05);
    }

    .stats-section {
        background: white;
        padding: 3rem 2rem;
        text-align: center;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .stat-item {
        padding: 1.5rem;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: #666;
        font-size: 1rem;
    }

    @@media (max-width: 768px) {
        .search-container {
            flex-direction: column;
        }
        
        .filters {
            justify-content: center;
        }
        
        .users-grid {
            grid-template-columns: 1fr;
            padding: 0 1rem;
        }
        
        .user-actions {
            flex-direction: column;
        }
    }
</style>

