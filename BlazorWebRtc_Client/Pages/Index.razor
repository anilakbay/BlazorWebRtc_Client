@code {
    private List<UserDTOResponseModel> responseDtoModel = new();
    private UserDTOResponseModel selectedDTO = new();
    private bool isModalVisible = false;

    private void OpenModal(UserDTOResponseModel dto)
    {
        selectedDTO = dto;
        isModalVisible = true;
    }

    private async Task SendRequest()
    {
        if (selectedDTO == null) return;
        
        var sendCommand = new RequestFriendShipCommand
        {
            ReceiverUserId = selectedDTO.UserId,
            Status = Status.pending
        };

        var result = await requestService.SendFriendshipRequest(sendCommand);

        if (result.IsSuccess)
        {
            await JS.InvokeVoidAsync("toastrNotify", "success", "Friendship request sent", "Success Process");
        }

        CloseModal();
    }

    private void CloseModal()
    {
        isModalVisible = false;
    }

    protected override async Task OnInitializedAsync()
    {
        responseDtoModel = await userInfoService.GetUserList();
    }

    private string GetProfilePicture(string? profilePicturePath)
    {
        if (string.IsNullOrEmpty(profilePicturePath))
            return "https://via.placeholder.com/100x100?text=No+Image";
        
        return $"https://192.168.1.190:7282/{profilePicturePath}";
    }
}