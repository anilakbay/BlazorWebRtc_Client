@page "/"
@layout MainLayout

<PageTitle>Friendship App - Connect with Friends</PageTitle>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 5rem 2rem;
        text-align: center;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 0 auto;
    }

    .hero-section h1 {
        font-size: 3.5rem;
        margin-bottom: 1.5rem;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        line-height: 1.2;
    }

    .hero-section p {
        font-size: 1.3rem;
        margin-bottom: 2.5rem;
        opacity: 0.9;
        line-height: 1.6;
    }

    .cta-button {
        background: linear-gradient(45deg, #28a745, #20c997);
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        border-radius: 50px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .cta-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
        background: linear-gradient(45deg, #218838, #1ea085);
    }

    .features-section {
        padding: 4rem 2rem;
        background: #f8f9fa;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .feature-card {
        background: white;
        padding: 2.5rem;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        color: #667eea;
    }

    .feature-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .feature-card p {
        color: #666;
        line-height: 1.6;
    }

    .suggested-friends {
        padding: 4rem 2rem;
        background: white;
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 3rem;
        color: #333;
        position: relative;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(45deg, #667eea, #764ba2);
        border-radius: 2px;
    }

    .friends-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .friend-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
    }

    .friend-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }

    .friend-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        margin: 0 auto 1.5rem;
        background: linear-gradient(45deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: white;
        font-weight: bold;
    }

    .friend-card h3 {
        font-size: 1.4rem;
        margin-bottom: 0.8rem;
        color: #333;
    }

    .friend-card p {
        color: #666;
        line-height: 1.5;
        margin-bottom: 1.5rem;
    }

    .friend-button {
        background: linear-gradient(45deg, #667eea, #764ba2);
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .friend-button:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2.5rem;
        }
        
        .hero-section p {
            font-size: 1.1rem;
        }
        
        .features-grid {
            grid-template-columns: 1fr;
        }
        
        .friends-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<section class="hero-section">
    <div class="hero-content">
        <h1>Connect with Amazing People</h1>
        <p>Discover new friendships, share experiences, and build meaningful connections in our vibrant community.</p>
        <button class="cta-button">Start Your Journey</button>
    </div>
</section>

<section class="features-section">
    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon">👥</div>
            <h3>Find Friends</h3>
            <p>Discover people with similar interests and hobbies. Our smart algorithm helps you connect with the right people.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">💬</div>
            <h3>Chat & Connect</h3>
            <p>Start conversations, share moments, and build lasting relationships through our secure messaging platform.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">🎉</div>
            <h3>Join Events</h3>
            <p>Participate in community events, meetups, and activities to expand your social circle and have fun.</p>
        </div>
    </div>
</section>

<section class="suggested-friends">
    <h2 class="section-title">Meet New People</h2>
    <div class="friends-grid">
        <div class="friend-card">
            <div class="friend-avatar">JD</div>
            <h3>John Doe</h3>
            <p>Adventure enthusiast who loves hiking, photography, and exploring new places. Always up for outdoor activities!</p>
            <button class="friend-button">Connect</button>
        </div>
        <div class="friend-card">
            <div class="friend-avatar">JS</div>
            <h3>Jane Smith</h3>
            <p>Coffee lover, bookworm, and travel blogger. Passionate about culture, art, and meaningful conversations.</p>
            <button class="friend-button">Connect</button>
        </div>
        <div class="friend-card">
            <div class="friend-avatar">SB</div>
            <h3>Sam Brown</h3>
            <p>Tech enthusiast, music producer, and fitness coach. Loves sharing knowledge and helping others grow.</p>
            <button class="friend-button">Connect</button>
        </div>
    </div>
</section>
