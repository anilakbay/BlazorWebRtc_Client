</style>

@code {
    private List<UserDto> _users = new();
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            _users = await _userService.GetUsersAsync();
        }
        catch (Exception ex)
        {
            await _jsRuntime.InvokeVoidAsync("alert", $"Error loading users: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshUsers()
    {
        await LoadUsers();
    }

    private async Task AddFriend(Guid userId)
    {
        try
        {
            var currentUser = await _authService.GetUserAsync<object>();
            // Burada current user ID'sini almanÄ±z gerekiyor
            // Åžimdilik basit bir implementasyon
            
            var success = await _userService.AddFriendAsync(Guid.NewGuid(), userId);
            if (success)
            {
                await _jsRuntime.InvokeVoidAsync("alert", "Friend added successfully!");
                await LoadUsers();
            }
            else
            {
                await _jsRuntime.InvokeVoidAsync("alert", "Failed to add friend.");
            }
        }
        catch (Exception ex)
        {
            await _jsRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }

    private async Task RemoveFriend(Guid userId)
    {
        try
        {
            var success = await _userService.RemoveFriendAsync(Guid.NewGuid(), userId);
            if (success)
            {
                await _jsRuntime.InvokeVoidAsync("alert", "Friend removed successfully!");
                await LoadUsers();
            }
            else
            {
                await _jsRuntime.InvokeVoidAsync("alert", "Failed to remove friend.");
            }
        }
        catch (Exception ex)
        {
            await _jsRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }

    private async Task Logout()
    {
        try
        {
            await _authService.LogoutAsync();
            if (_authStateProvider is CustomAuthStateProvider customProvider)
            {
                customProvider.NotifyUserLogout();
            }
            _navigationManager.NavigateTo("/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            await _jsRuntime.InvokeVoidAsync("alert", $"Logout error: {ex.Message}");
        }
    }

    private string GetProfileImageUrl(string? profilePicture)
    {
        if (string.IsNullOrEmpty(profilePicture))
            return "/images/avatars/default-avatar.png";

        // EÄŸer tam URL ise direkt dÃ¶ndÃ¼r
        if (profilePicture.StartsWith("http"))
            return profilePicture;

        // EÄŸer relative path ise API base URL ile birleÅŸtir
        return $"https://localhost:7071{profilePicture}";
    }
}
