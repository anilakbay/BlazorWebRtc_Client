@page "/users"
@using BlazorWebRtc_Client.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject UserService _userService
@inject AuthenticationService _authService
@inject AuthenticationStateProvider _authStateProvider
@inject NavigationManager _navigationManager
@inject IJSRuntime _jsRuntime
@attribute [Authorize]

<div class="user-list-container">
    <div class="user-list-header">
        <h1 class="page-title">Users</h1>
        <div class="header-actions">
            <button class="btn btn-outline" @onclick="RefreshUsers">
                <span class="btn-icon">ðŸ”„</span>
                Refresh
            </button>
            <button class="btn btn-danger" @onclick="Logout">
                <span class="btn-icon">ðŸšª</span>
                Logout
            </button>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner">
                <div class="spinner"></div>
                <div class="loading-dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
            <p class="loading-text">Loading users...</p>
        </div>
    }
    else if (_users.Any())
    {
        <div class="users-grid">
            @foreach (var user in _users)
            {
                <div class="user-card">
                    <div class="user-avatar">
                        @if (!string.IsNullOrEmpty(user.ProfilePicture))
                        {
                            <img src="@GetProfileImageUrl(user.ProfilePicture)" 
                                 alt="@user.UserName" 
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                            <div class="default-avatar" style="display: none;">
                                <span>@user.UserName.Substring(0, 1).ToUpper()</span>
                            </div>
                        }
                        else
                        {
                            <div class="default-avatar">
                                <span>@user.UserName.Substring(0, 1).ToUpper()</span>
                            </div>
                        }
                        <div class="online-status @(user.IsOnline ? "online" : "offline")"></div>
                    </div>
                    
                    <div class="user-info">
                        <h3 class="user-name">@user.UserName</h3>
                        <p class="user-email">@user.Email</p>
                        <p class="user-joined">Joined: @user.CreatedDate.ToString("MMM dd, yyyy")</p>
                    </div>
                    
                    <div class="user-actions">
                        @if (user.IsFriend)
                        {
                            <button class="btn btn-danger btn-sm" @onclick="() => RemoveFriend(user.Id)">
                                Remove Friend
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-primary btn-sm" @onclick="() => AddFriend(user.Id)">
                                Add Friend
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">ðŸ‘¥</div>
            <h3>No users found</h3>
            <p>There are no users to display at the moment.</p>
        </div>
    }
</div>

